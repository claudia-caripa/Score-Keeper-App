<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1B5E20</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">#FF9800</item>
    </style>

    <style name="TeamName" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#616161</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="RunStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">56sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="OutStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


</resources>
